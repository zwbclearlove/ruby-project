<style>
    img {
        width: 100%;
    }

    .good-frame {
        background-color: white;

        margin-bottom: 20px;
    }

    .good-frame h4 {
        padding-top: 10px;
        padding-bottom: 10px;
    }

    .good-frame .title {
        padding-top: 13px;
        padding-bottom: 10px;

        font-size: large;
        font-weight: bold;
    }

    .good-frame .good-name {
        padding-top: 13px;
        padding-bottom: 10px;

        font-size: large;
        font-weight: bold;
    }

    .good-frame .see-more {
        padding-top: 10px;
        padding-bottom: 13px;

        font-size: smaller;
    }

    .good-frame .unit-price {
        font-weight: bold;
        margin-bottom: 5px;
    }

    .img-frame {
        position: relative;
        width: 100%;
        padding-top: 100%;
        /* 宽高比例为1：1 */
    }

    .img-frame img {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
    }
</style>
<%= render 'nav' %>




<main style="margin-top: 10px;">

  <div class="container">
    <div class="row" style="margin-left: 0px; margin-right: 0px; ">
      <div class="col-md-12" style="background-color: white; margin-top: 10px;  margin-bottom: 10px; ">
        <h1>欢迎购物</h1>
      </div>
    </div>
    <div class="row" style="margin-left: 0px; margin-right: 0px; ">
      <div class="col-md-12" style="background-color: #58dbcc; margin-top: 20px;  margin-bottom: 20px; ">
        <div class="col-md-12">
          <h4 style="font-size: larger; font-weight: bold; text-align: center;">全部商品</h4>
        </div>
      </div>
    </div>


    <div class="row">
      <% @products.each do |product| %>
        <div class="col-md-3 ">
          <div class="good-frame">
            <div class=" title"><%= product.name %></div>
            <div class="img-frame">
              <a href="<%= user_product_path(product) %>"><%= image_tag product.image %></a>
            </div>
            <div class="see-more">
              <h4 style="text-align: center">价格: <%= product.price %> | 销量: <%= product.sales %></h4>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</main>
