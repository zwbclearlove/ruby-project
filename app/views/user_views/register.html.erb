
<style>
    body {
        /* background-color: wheat; */
        background-repeat: no-repeat;
        background-size: 100%;
        background-position: 0 -300px;

    }
</style>


<!-- 主体部分 -->
<main style="margin-top: 150px;">
  <div class="container">
    <div class="row">
      <!-- <div class="col-md-8">
          <img src="../images/login/pngsucai_324660_8e29d5.png" alt="">
      </div> -->
      <p id="notice"><%= notice %></p>
      <div class="col-md-4 col-md-offset-4"
           style="border: 1px solid #ddd; border-radius: 2%; background-color: rgb(253, 252, 252);">


        <h3 style="text-align: center; margin-bottom: 20px;">register</h3>

        <div id="prompt">

        </div>
        <h2><%= alert %></h2>
        <%= form_with url: do_register_path do %>
          <p>
            用户名: <%= text_field_tag :username %>
          </p>
          <p>
            邮箱: <%= email_field_tag :email %>
          </p>
          <p>
            密码: <%= password_field_tag :password %>
          </p>
          <p>
            确认密码: <%= password_field_tag :password_confirm %>
          </p>
          <%= submit_tag '注册' %>
        <% end %>

        <p>已有账号？ 去<a href="<%= login_path %>">登录</a></p>
      </div>
    </div>
  </div>
  </div>
</main>
