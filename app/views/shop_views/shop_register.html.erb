
<style>
    body {
        background-repeat: no-repeat;
        background-size: 100%;
        background-position: 0 -280px;
    }
</style>

<!-- 主体部分 -->
<main style="margin-top: 70px;">
  <div class="container">
    <div class="row">

      <div class="col-md-6 col-md-offset-3"
           style="border: 1px solid #ddd; border-radius: 2%; background-color: rgb(253, 252, 252);">
        <h3 style="text-align: center; margin-bottom: 20px;">完善信息</h3>
        <h4 style="color: #777777; font-size: 1em;">第一次登陆需要完善信息</h4>
        <div id="prompt">

        </div>
        <%= form_with url: shop_do_shop_register_path do %>
          <div class="form-group">
            <label class="control-label">店铺名称</label>
            <%= text_field_tag :name, nil, class:"form-control"%>
          </div>
          <div class="form-group">
            <label class="control-label">店铺地址</label>
            <%= text_field_tag :address, nil, class:"form-control"%>
          </div>
          <div class="form-group">
            <label class="control-label">店铺描述</label>
            <%= text_field_tag :description, nil, class:"form-control"%>
          </div>
          <div class="form-group">
            <label class="control-label">联系电话</label>
            <%= text_field_tag :phone, nil, class:"form-control"%>
          </div>
          <%= submit_tag 'login', class: "btn btn-success" %>
        <% end %>


        <p><a href="<%= shop_logout_path %>">退出登录</a></p>

      </div>
    </div>
  </div>
</main>